<p id="notice"><%= notice %></p>

<h1>Listing Blurbs</h1>

<table>
  <thead>
    <tr>
        <th>Project</th>
        <th>Datasource</th>
        <th>Description</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blurbs.each do |blurb| %>
      <tr>
        <td><%= link_to blurb.project.title, project_path(blurb.project) %></td>
        <td><%= link_to blurb.datasource.title, datasource_path(blurb.datasource) %></td>
        <td><%= blurb.description %></td>
        <td><%= link_to 'Show', blurb %></td>
        <td><%= link_to 'Edit', edit_blurb_path(blurb) %></td>
        <td><%= link_to 'Destroy', blurb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

