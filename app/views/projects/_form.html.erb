<%= form_for @project, :html => { :class => "" } do |f| %>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <form>
    <div class="form-inline">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag 'Lat / Long' %>
        <%= f.text_field :latitude, :class => 'form-control', :readonly => true %>
        <%= f.text_field :longitude, :class => 'form-control', :readonly => true %>
      </div>
    </div>
      <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :builder_id %>
        <%= f.collection_select(:builder_id, Builder.all, :id, :title, {}, :class => 'form-control') %>
      </div>
      <div class="form-group">
        <%= f.label :verified %>
        <%= f.check_box :verified %>
      </div>
      <%= f.submit :class => 'btn btn-primary' %>
  </form>
<% end %>
