<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

  <div class='row'>
    <div class='col-sm-12'>
      <p>
        <form>
          <legend>Search</legend>
          <div class='col-xs-4'>
            <input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword' >
          </div>
        </form>
      </p>
    </div>
  </div>

  <hr>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Verified</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Builder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.title %></td>
        <td><%= project.verified %></td>
        <td><%= project.latitude %></td>
        <td><%= project.longitude %></td>
        <td>
            <% if project.builder %>
                <%= link_to project.builder.title, builder_path(project.builder) %>
            <% end %>
        </td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
